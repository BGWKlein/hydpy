<?xml version="1.0" encoding="UTF-8"?>
<config
        xmlns="https://github.com/tyralla/hydpy/tree/master/hydpy/conf/HydPy2FEWS.xsd"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="https://github.com/tyralla/hydpy/tree/master/hydpy/conf/HydPy2FEWS.xsd HydPy2FEWS.xsd">

    <options>
        <printprogress>false</printprogress>
        <printincolor>true</printincolor>
        <reprdigits>6</reprdigits>
        <usecython>true</usecython>
        <usedefaultvalues>false</usedefaultvalues>
        <utcoffset>60</utcoffset>
        <warnmissingobsfile>true</warnmissingobsfile>
        <warnmissingsimfile>true</warnmissingsimfile>
        <warntrim>true</warntrim>
        <flattennetcdf>true</flattennetcdf>
        <isolatenetcdf>true</isolatenetcdf>
    </options>

    <timegrid>
        <firstdate>1996-01-01T00:00:00</firstdate>
        <lastdate>1996-01-06T00:00:00</lastdate>
        <stepsize>1d</stepsize>
    </timegrid>

    <selections>
        headwaters
        streams
    </selections>

    <devices>
        land_dill
        land_lahn_1
        dill
    </devices>

    <sequences>

        <filetype>
            <general>npy</general>
        </filetype>

        <overwrite>
            <general>true</general>
        </overwrite>

        <dirpath>
            <inputs>LahnHBV/sequences/input</inputs>
            <fluxes>LahnHBV/sequences/output</fluxes>
            <states>LahnHBV/sequences/output</states>
            <nodes>LahnHBV/sequences/node</nodes>
        </dirpath>

        <aggregation>
            <general>none</general>
        </aggregation>

        <inputs>
            <input info="all input data">
                <selections/>
                <devices>
                    catchment
                </devices>
                <series>
                    <hland_v1>
                        <inputs>
                            <p/>
                            <t/>
                            <tn/>
                            <epn/>
                        </inputs>
                    </hland_v1>
                </series>
                <filetype>
                    <inputs>nc</inputs>
                </filetype>
            </input>
        </inputs>

        <outputs>

            <output info="precipitation">
                <selections>
                    headwaters
                </selections>
                <devices>
                    land_lahn_1
                    land_lahn_2
                </devices>
                <series>
                    <hland_v1>
                        <inputs>
                            <p/>
                        </inputs>
                        <fluxes>
                            <pc/>
                            <tf/>
                        </fluxes>
                    </hland_v1>
                </series>
                <filetype>
                    <inputs>asc</inputs>
                    <fluxes>npy</fluxes>
                </filetype>
            </output>

            <output info="soilmoisture">
                <selections>
                    complete
                </selections>
                <series>
                    <hland_v1>
                        <states>
                            <sm/>
                        </states>
                    </hland_v1>
                </series>
                <filetype>
                    <general>nc</general>
                </filetype>
                <overwrite>
                    <states>false</states>
                </overwrite>
            </output>

            <output info="averaged">
                <devices/>
                <series>
                    <node>
                        <sim/>
                        <obs/>
                    </node>
                    <hland_v1>
                        <fluxes>
                            <pc/>
                            <tf/>
                        </fluxes>
                        <states>
                            <sm/>
                        </states>
                    </hland_v1>
                </series>
                <dirpath>
                    <nodes>LahnHBV/sequences/output</nodes>
                </dirpath>
                <aggregation>
                    <general>mean</general>
                </aggregation>
            </output>

        </outputs>

    </sequences>

</config>
